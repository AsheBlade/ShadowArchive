<h3 id="find-max-in-array">Find max in Array</h3>

<div class="language-java highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="kt">double</span><span class="o">[]</span> <span class="n">arr</span> <span class="o">=</span> <span class="o">{</span><span class="mi">19</span><span class="o">,</span> <span class="mf">12.89</span><span class="o">,</span> <span class="mf">16.5</span><span class="o">,</span> <span class="mi">200</span><span class="o">,</span> <span class="mf">13.7</span><span class="o">};</span>
<span class="kt">double</span> <span class="n">total</span> <span class="o">=</span> <span class="mi">0</span><span class="o">;</span>

<span class="k">for</span><span class="o">(</span><span class="kt">int</span> <span class="n">i</span><span class="o">=</span><span class="mi">0</span><span class="o">;</span> <span class="n">i</span><span class="o">&lt;</span><span class="n">arr</span><span class="o">.</span><span class="na">length</span><span class="o">;</span> <span class="n">i</span><span class="o">++){</span>
	<span class="n">total</span> <span class="o">=</span> <span class="n">total</span> <span class="o">+</span> <span class="n">arr</span><span class="o">[</span><span class="n">i</span><span class="o">];</span>
<span class="o">}</span>


<span class="cm">/* arr.length returns the number of elements 
 * present in the array
 */</span>
<span class="kt">double</span> <span class="n">average</span> <span class="o">=</span> <span class="n">total</span> <span class="o">/</span> <span class="n">arr</span><span class="o">.</span><span class="na">length</span><span class="o">;</span>
    
<span class="cm">/* This is used for displaying the formatted output
 * if you give %.4f then the output would have 4 digits
 * after decimal point.
 */</span>
<span class="nc">System</span><span class="o">.</span><span class="na">out</span><span class="o">.</span><span class="na">format</span><span class="o">(</span><span class="s">"The average is: %.3f"</span><span class="o">,</span> <span class="n">average</span><span class="o">);</span>
</code></pre></div></div>
